  /* Inheritance */
body {
    font-family: Arial, sans-serif;
    font-size: 18px;
}

/* Select multiple elements  */
header, footer {
    background-color: #065ba6;
}

/* Class selector  */
.site-title {
    color: #00ea0c;
}

/* Id selector  */
#my-image {
    box-shadow: 0 0 2px 1px #000;
}

/* Replace the bullets from the list of hobbies with squares */
ul {
    list-style-type: square;
}

/* Using the nth-child selector  */
ul li:nth-child(odd) {
    background-color: #ec43b6;
}

/* Styling the Navigation */
/* Remove the bullets from the unordered list in navigation (only if you have used the ul tag inside the nav tag) */
nav ul {
    list-style-type: none;
}

/* Remove the underline from the links */
nav a {
    text-decoration: none;
}

/* Add a background and border to the links */
nav a {
    background-color: #36e909;
    border: 1px solid #1c558e;
    color: #fff;
    padding: 5px 10px;
}

/* Change the background color on hover or focus state of the links */
nav a:hover, nav a:focus {
    background-color: #0c0e2d;
}
